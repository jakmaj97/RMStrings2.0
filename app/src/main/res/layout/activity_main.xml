<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myownrms.jakubmajchrzak.rmstrings2.MainActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:id="@+id/tvCHooseInstr"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="@string/choose_instrument_comm"
        android:gravity="center"
        android:textSize="30dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <Button
        android:id="@+id/btViol1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viol1" />

    <Button
        android:id="@+id/btViol2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viol2" />

    <Button
        android:id="@+id/btCello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cello" />

    <Button
        android:id="@+id/btTrmpt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trumpet1" />

    <Button
        android:id="@+id/btTrmpt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trumpet2" />

    <Button
        android:id="@+id/btSax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sax" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="244dp" />

</LinearLayout>
