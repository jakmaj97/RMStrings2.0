<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="myrms.myrmstrings.jakubmajchrzak.example.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_in_black">

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/tvCHooseInstr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/choose_instrument_comm"
            android:textSize="30dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvInstruments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"/>

</LinearLayout>
